  "properties": {
    "toilets": {
      "type": "array",
      "description": "Identify the shared toilet facilities. This does not include toilet facilities dedicated to specific sites; those are specified as Campsite Amenities.",
      "items": {
        "type": "object",
        "required": ["service", "descriptor"],
        "properties": {
          "service": {
            "type": "string",
            "enum": ["Flush", "Pit", "Portable", "Vault", "None"]
          },
          "descriptor": {
            "type": "object",
            "required": [
              "climateControlled",
              "electricity",
              "changingTable",
              "sanitaryProductVending",
              "feeBased"
            ],
            "properties": {
              "climateControlled": {
                "type": "boolean"
              },
              "electricity": {
                "type": "boolean"
              },
              "changingTable": {
                "type": "boolean"
              },
              "sanitaryProductVending": {
                "type": "boolean"
              },
              "feeBased": {
                "type": "object",
                "required": ["value", "description"],
                "properties": {
                  "value": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMaximum": 100
                  },
                  "description": {
                    "type": "string",
                    "maxLength": 50
                  }
                }
              }
            }
          }
        }
      }
    },
    "bathing": {
      "type": "array",
      "description": "Identify the shared bathing facilities. This does not include bathing facilities dedicated to specific sites; those are specified as Campsite Amenities.",
      "items": {
        "type": "object",
        "required": ["service", "descriptor"],
        "properties": {
          "service": {
            "type": "string",
            "enum": ["showers", "bathtubs", "no shower facilities"]
          },
          "descriptor": {
            "type": "object",
            "properties": {
              "type": "object",
              "properties": {
                "indoor": {
                  "type": "boolean"
                },
                "electricity": {
                  "type": "boolean"
                },
                "hotWater": {
                  "type": "boolean"
                },
                "seasonal": {
                  "type": "boolean"
                },
                "feeBased": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number",
                      "minimum": 0,
                      "exclusiveMaximum": 100
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 50
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
