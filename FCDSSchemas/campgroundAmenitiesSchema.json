  "title": "Campground Amenities",
  "description": "Note: This file is a WIP, certain things have not been implemented yet, for example validation on many of the fields and required attributes",
  "type": "object",
  "required": [
    "toilets",
    "bathing",
    "wasteManagement",
    "forPurchase",
    "shopping",
    "communications",
    "healthAndSafety",
    "parking",
    "trails",
    "recreation",
    "waterAccess",
    "boatAccess",
    "swimming",
    "fishing",
    "shelters",
    "RVAmenities",
    "livestock",
    "campgrounds",
    "medical"
